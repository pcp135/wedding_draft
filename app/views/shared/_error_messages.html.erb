<% if @user.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-error">
			<%= t(:form_contains)%> <%= pluralize(@user.errors.count, t(:error))%>.
		</div>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li>* <%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>
		
				