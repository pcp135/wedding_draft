<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> | Phil & Stef's Wedding</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-43398629-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</head>
<body>
	<%= render 'layouts/header' %>
	<div class="container">
		<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>"><%= value %></div>
		<% end %>
		<% if signed_in? %>
		<div class="span2 pull-left center">
			<h4><strong><%= ((Time.gm(2014, 6, 14, 12, 00, 00)-Time.now)/86400).round %></strong><br><small>days to go</small></h4>
		</div>
		<% end %>
		<div class="span1 pull-right center">
			<ul class="nav">
				<li><%= link_to image_tag("EN.png"), params.merge({:locale => :en}) %></li>
				<li><%= link_to image_tag("DE.png"), params.merge({:locale => :de}) %></li>
			</ul>
		</div>
		<%= yield %>
		<%= debug(params) if Rails.env.development? %>
		<% if signed_in? %>
			<%= render 'layouts/footer' %>
		<% end %>
	</div>
	<script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-43398629-1', 'parsons-hense.info');
	  ga('send', 'pageview');

	</script>
</body>
</html>
