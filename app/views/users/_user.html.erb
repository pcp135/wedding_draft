<li>
	<div class="col-md-4"><%= link_to user.name, edit_user_path(user) %></div> 
	<div class="col-md-4"><%= mail_to user.email, user.email %></div>
	<% if current_user.admin? && !current_user?(user) && !user.admin? %>
		<div class="col-md-2"><%= link_to "delete", user, method: :delete, 
					data: { confirm: "Are you sure?" } %>
		</div>
	<% end %>
</li>
